<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:padding="25dp"
            android:elevation="20dp"
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp">


            <RelativeLayout
                android:id="@+id/rl_toolbar"
                android:background="@color/purple_200"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <EditText
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:imeOptions="actionSearch"
                        android:drawablePadding="15dp"
                        android:drawableStart="@drawable/ic_baseline_search_24"
                        android:hint="Search places"
                        android:id="@+id/et_city_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_below="@id/card_toolbar"
            android:id="@+id/rl_sub_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:background="@color/snow"
                    android:id="@+id/weather_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:id="@+id/date_and_time"
                        android:text="data and time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_weight="3"
                            android:text="day1"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_max_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="1"
                            android:text="day1"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_min_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_weight="1"
                            android:text="0*C"
                            android:textSize="50sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_temp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>


                        <ImageView
                            android:src="@drawable/sun"
                            android:id="@+id/iv_weather_icon"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_weight="1"
                            android:text="Feel a like"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_feel_like"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="3"
                            android:text="Sunshine"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_weather_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>


                </LinearLayout>



            </FrameLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="15dp"
                app:cardMaxElevation="10dp"
                app:cardElevation="5dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="#242343"
                        android:id="@+id/ll_main_bg_avobe"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rl_pressure_wrapper"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/meter"
                                    android:id="@+id/pressure"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="25dp"/>

                                <TextView
                                    android:id="@+id/tv_pressure"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="23dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_humidity_wrapper"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/humidity"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="25dp"/>

                                <TextView
                                    android:id="@+id/tv_humidity"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="23dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_wind_speed_wrapper"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/wind"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="25dp"/>

                                <TextView
                                    android:id="@+id/tv_wind_speed"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="23dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:background="#242343"
                        android:id="@+id/ll_main_bg_blow"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rl_sunrise_wrapper"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/sun"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="25dp"/>

                                <TextView
                                    android:id="@+id/tv_sunrise"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="23dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_sunset_wrapper"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/sunrise"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="25dp"/>

                                <TextView
                                    android:id="@+id/tv_sunset"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="23dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_temp_farenhite_wrapper"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:src="@drawable/temperature"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="25dp"/>

                                <TextView
                                    android:id="@+id/tv_temp_farenhite"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="23dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="100"
                                    android:textSize="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>



        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>